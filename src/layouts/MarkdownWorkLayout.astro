---
import WorkLayout from "../layouts/WorkLayout.astro";
import SvgBackButton from "../components/SvgBackButton.astro";
import PageTitle from "../components/PageTitle.astro";
import Button from "../components/Button.astro";
import Tags from "../components/Tags.tsx";
import Recommendation from "../components/Recommendation.tsx";
import RecommendedWork from "../components/RecommendedWork.tsx";

const { frontmatter } = Astro.props;
const { description } = frontmatter;
---

<WorkLayout pageTitle={frontmatter.title} pageDescription={description}>
  <div class="work-item">
    <div class="work-item__aside">
      <a href="/#work">
        <SvgBackButton />
      </a>

      <div class="work-item__aside-sections">
        <PageTitle>{frontmatter.title}</PageTitle>

        <div class="work-item__aside-section">
          <strong>Sectors:</strong>
          {frontmatter.sectors.join(" â€¢ ")}
        </div>

        <div class="work-item__aside-section">
          <strong>Type:</strong>
          {frontmatter.type}
        </div>

        <div class="work-item__aside-section work-item__aside-section--tags">
          <strong>Tags:</strong>
          <div>
            <Tags tags={frontmatter.tags} client:only="react" />
          </div>
        </div>
      </div>
      <div class="work-item__aside-section work-item__aside-recommended-work">
        <div class="work-item__aside-recommended-work-header">
          <strong class="work-item__aside-recommended-work-title"
            >Related work:</strong
          >
        </div>
        <div class="work-item__aside-recommended-work-body">
          <ul class="work-item__aside-recommended-work-items">
            {
              frontmatter.recommendedWorks.map(
                (work: {
                  image: { src: string };
                  title: string;
                  description: string;
                  bgcolor: string;
                  link: string;
                }) => (
                  <li class="work-item__aside-recommended-work-item">
                    <a href={work.link}>
                      <strong>{work.title}</strong>
                      <p>{work.description}</p>
                    </a>
                  </li>
                )
              )
            }
          </ul>
        </div>
      </div>

      <div>
        <Button href="/#contact">Get in touch</Button>
      </div>
    </div>

    <div class="work-item__main">
      <slot />

      {
        frontmatter.recommendedWorks && (
          <div class="work-item__recommendations">
            <Recommendation
              image={frontmatter.recommendationImage?.src}
              text={frontmatter.recommendationText}
              footer={frontmatter.recommendationFooter}
              client:load
            />
          </div>
        )
      }

      {
        frontmatter.recommendedWorks?.length && (
          <div class="work-item__recommended-work-works">
            <h2 class="work-item__recommended-work-title">Other work</h2>
            <div class="work-item__recommended-work-body">
              {frontmatter.recommendedWorks.map(
                (work: {
                  image: { src: string };
                  title: string;
                  description: string;
                  bgcolor: string;
                  link: string;
                }) => (
                  <RecommendedWork
                    image={work.image?.src}
                    title={work.title}
                    description={work.description}
                    link={work.link}
                    client:load
                  />
                )
              )}
            </div>
          </div>
        )
      }
    </div>
  </div>
</WorkLayout>

<style>
  .work-item {
    --flex-direction: column;
    --gap: var(--space-6);
    --work-item__aside-position: relative;
    --work-item__aside-top: 0;
    --work-item__aside-height: auto;
    --strong-display: inline;
    --work-item__aside-bd-gap: var(--space-2);
  }

  @media screen and (min-width: 1000px) {
    .work-item {
      --flex-direction: row;
      --gap: var(--space-12);
      --work-item__aside-position: sticky;
      --work-item__aside-top: var(--space-12);
      --work-item__aside-height: 50dvi;
      --strong-display: block;
      --work-item__aside-bd-gap: var(--space-2);
    }
  }

  .work-item {
    display: flex;
    flex-direction: var(--flex-direction);
    gap: var(--gap);
  }

  .work-item__aside {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
    position: var(--work-item__aside-position);
    top: var(--work-item__aside-top);
    left: 0;
    height: var(--work-item__aside-height);
  }

  .work-item__aside-sections {
    display: flex;
    flex-direction: column;
    gap: var(--work-item__aside-bd-gap);
    transition: all 1s var(--ease-out-elastic);
  }

  .work-item__aside-section {
    line-height: 1.4;
  }

  .work-item__aside-section--tags {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .work-item__aside-section strong {
    display: var(--strong-display);
  }

  .work-item__aside-recommended-work-items {
    list-style-image: url("../images/bullet-arrow-right.svg");
    padding-left: 1rem;
  }

  .work-item__aside-recommended-work-item {
    margin-bottom: var(--space-2);
  }

  .work-item__aside-recommended-work-item:last-child {
    margin-bottom: 0;
  }

  .work-item__recommendations {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: var(--space-12);
  }

  .work-item__main {
    max-width: 1920px;
  }

  .work-item__recommended-work-title {
    margin-bottom: var(--space-2);
    font-size: var(--font-size-xl);
    text-align: center;
    color: var(--color-onPrimary);
  }

  .work-item__recommended-work-body {
    display: flex;
    gap: var(--space-4);
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
