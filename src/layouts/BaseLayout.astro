---
import MainNav from "../components/MainNav.astro";
import MainFooter from "../components/Footer.astro";
import ColorPicker from "../components/ColorPicker.tsx";
import "../styles/styles.css";

const mainTitle = "Michael Watts, Software Engineer";
const { pageTitle } = Astro.props;
---

<script>
  import {
    themePrimary,
    themeOnPrimary,
    themeSecondary,
    themeEmphasis,
  } from "../store";

  document.documentElement.style.setProperty(
    "--color-primary",
    themePrimary.get()
  );
  document.documentElement.style.setProperty(
    "--color-onPrimary",
    themeOnPrimary.get()
  );
  document.documentElement.style.setProperty(
    "--color-secondary",
    themeSecondary.get()
  );
  document.documentElement.style.setProperty(
    "--color-emphasis",
    themeEmphasis.get()
  );

  themePrimary.subscribe((color) => {
    document.documentElement.style.setProperty("--color-primary", color);
  });

  themeOnPrimary.subscribe((color) => {
    document.documentElement.style.setProperty("--color-onPrimary", color);
  });

  themeSecondary.subscribe((color) => {
    document.documentElement.style.setProperty("--color-secondary", color);
  });

  themeEmphasis.subscribe((color) => {
    document.documentElement.style.setProperty("--color-emphasis", color);
  });
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />

    <title>{mainTitle} | {pageTitle}</title>
    <meta
      name="description"
      content="I'm a a software engineer from Surrey, UK, specialising in TypeScript, C#, Ruby, Rails, Node, JavaScript and HTML/CSS."
    />
    <link rel="stylesheet" href="https://use.typekit.net/eaq6veo.css" />
  </head>
  <body>
    <MainNav />

    <main>
      <div id="top-of-site-pixel-anchor"></div>
      <slot />
    </main>

    <MainFooter />
    <ColorPicker client:only="react" />
  </body>
</html>
