            </a>
          </span>
        </div>
      </div>
    </div>
  </Container>
</section>
<BrushEnd color="oklab(from var(--color-primary) calc(l - 0.05) a b)" />

<style>
  .hero {
    display: grid;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding: var(--space-l) 0;
  }

  .hero__layout {
    display: grid;
    place-items: center;
  }

  .hero__content {
    display: grid;
    gap: var(--space-m);
    text-align: center;
  }

  .hero__headline {
    color: var(--color-onPrimary);
    line-height: 1;
    font-weight: 700;
    font-size: var(--step-5);
  }

  .hero__description {
    color: var(--color-onPrimary);
    font-size: var(--step-1);
    line-height: var(--space-l);
  }

  .hero__actions {
    display: grid;
    grid-auto-flow: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2xs);
  }

  .hero__work-link {
    position: relative;
    font-size: var(--step-1);
    color: var(--color-onPrimary);
  }

  .hero__work-link-anchor {
    font-variation-settings: var(--font-semi-bold);
    font-weight: 600;
  }

  .hero__work-link-stroke {
    position: absolute;
    bottom: 0;
    left: 30px;
    z-index: -1;
    opacity: 0.5;
  }

  .hero__work-link-anchor .hero__work-link-streak {
    mask-repeat: no-repeat;
    stroke: oklab(from var(--color-emphasis) l a b / 0.8);
    stroke-dasharray: 150% 150%;
    stroke-dashoffset: 150%;
  }

  @keyframes swipe {
    from {
      stroke-dashoffset: 150%;
    }
    to {
      stroke-dashoffset: 0;
    }
  }

  .hero__work-link-anchor:hover .hero__work-link-streak {
    animation: swipe 0.2s cubic-bezier(0.39, 0.575, 0.565, 1) 0.1s forwards;
    animation-direction: normal;
  }

  @media screen and (min-width: 768px) {
    .hero {
      height: 75dvh;
      min-height: 740px;
    }
  }

  @media screen and (min-width: 1440px) {
    .hero__layout {
      place-items: start;
    }

    .hero__content {
      max-width: 100%;
      text-align: left;
    }

    .hero__description {
      max-width: 80%;
    }

    .hero__actions {
      justify-content: start;
    }
  }
</style>
