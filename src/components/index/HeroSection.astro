---
import Container from "../../components/Container.astro";
import Button from "../../components/GetInTouchButton.astro";
import BrushEnd from "../BrushEnd.astro";
---

<section class="hero">
  <Container>
    <div class="hero__layout">
      <div class="hero__content">
        <h2 class="hero__headline">
          Scalable, crafted software for fintech
          {" "}
          <span style="color:var(--color-emphasis)">&</span>
          {" "}
          beyond!
        </h2>
        <p class="hero__description">
          I design and develop web applications with a focus on simplicity,
          scalability and seamless user experience.
        </p>
        <div class="hero__actions">
          <Button href="#contact" text="Get in touch" />
          <span class="hero__work-link">
            or
            {" "}
            <a class="hero__work-link-anchor" href="/#work">
              view work
