---
import { Image } from "astro:assets";
import Container from "../../components/Container.astro";
import Button from "../../components/GetInTouchButton.astro";
import animatedHeroImage from "../../images/hero-illustration.gif";
---

<div class="hero-container">
  <Container>
    <div class="hero-content-wrapper">
      <div class="title">
        <h2 class="title__partial title__partial--first">
          <span>
            I develop
            {" "}
            <span style="color:var(--color-emphasis)">&</span>
            {" "}
            deliver
          </span>
          <span>software solutions...</span>
        </h2>
        <span class="title__partial title__partial--second">
          I'm an accomplished digital expert and I'll work hard to help you
          achieve your objectives.
        </span>
        <div class="title__partial title__partial--second">
          <Button
            href="#contact"
            text="Get in touch"
            theme="dark"
            icon="false"
          />
        </div>
      </div>
      <div class="hero-image-container">
        <Image
          src={animatedHeroImage}
          alt="Illustration of developer."
          quality={100}
          loading="eager"
          class="hero-image"
        />
      </div>
    </div>
  </Container>
</div>

<style>
  .hero-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-bottom: var(--space-24);
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column-reverse;
    justify-content: space-between;
    align-items: center;
  }

  .hero-image-container {
    position: relative;
  }

  .hero-image {
    width: 100%;
    max-width: 600px;
    height: auto;
  }

  .title {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    color: var(--color-secondary);
    line-height: 1.1;
    text-align: center;
  }

  .title__partial {
    display: block;
  }

  .title__partial--first {
    color: var(--color-onPrimary);
    text-wrap: balance;
    line-height: 1;
    font-weight: 700;
    font-size: clamp(
      var(--font-size-lg),
      calc(7vw + 1rem),
      var(--font-size-xl)
    );
  }

  .title__partial--second {
    color: var(--color-onPrimary);
    font-size: clamp(20px, 2.5dvw, 24px);
    line-height: 1.6;
    text-wrap: balance;
  }

  @media screen and (min-width: 1440px) {
    .hero-content-wrapper {
      flex-direction: row;
    }

    .hero-image {
      min-width: 400px;
    }
  }

  @media screen and (min-width: 1440px) {
    .hero-container {
      height: 100dvh;
      padding-bottom: 0;
    }

    .title {
      text-align: left;
    }

    .title__partial--first span {
      white-space: nowrap;
    }

    .title__partial--first span:nth-of-type(2) {
      margin-left: var(--space-8);
    }

    .title__partial--second {
      margin-left: var(--space-24);
    }

    .hero-image {
      min-width: 580px;
    }
  }
</style>
