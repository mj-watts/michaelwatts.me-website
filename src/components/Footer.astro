---
import Container from "./Container.astro";

const { classList } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer id="contact" class:list={["", classList]}>
  <div class="title"><span>CONTACT</span></div>
  <Container>
    <div class="email">
      <a href="mailto:hello@michaelwatts.me">HELLO@MICHAELWATTS.ME</a>
    </div>
    <div>
      Â© Michael Watts, 2022 - {currentYear}
    </div>
  </Container>
</footer>

<script>
  import { animate, scroll } from "motion";

  const animation = animate(
    ".title > span",
    { transform: ["scaleY(-6)", "scaleY(1)"], opacity: [0, 1] },
    { ease: "linear" }
  );

  scroll(animation);
</script>

<style>
  footer {
    background-color: var(--color-secondary);
    margin-top: var(--space-10);
    padding: var(--space-24) 0;
    text-align: center;
    container: footer / inline-size;
  }

  .title {
    overflow: hidden;
    width: 100%;
  }

  .title span {
    display: block;
    line-height: 1;
    font: 43cqi / 0.8 var(--header-font);
    letter-spacing: -0.04em;
    margin-left: -0.05em;
    pointer-events: none;
    text-transform: uppercase;
    transform-origin: top;
    user-select: none;
    color: var(--color-primary);
    animation: slide-in linear;
    animation-timeline: view();
    animation-range-start: 100px;
    animation-range-end: 200px;
  }

  .email {
    font-variation-settings:
      "slnt" 0,
      "wght" 700;
  }

  @keyframes slide-in {
    from {
      transform: scaleY(0);
      opacity: 0;
    }
    to {
      transform: scaleY(1);
      opacity: 1;
    }
  }
</style>
