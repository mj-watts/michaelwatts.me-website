<a href="/" class="avatar">
  <div role="heading" aria-level="1" class="avatar__heading">
    <div class="avatar__heading--name">M<span>ichael</span> Watts</div>
    <div class="avatar__heading--title">Web Developer</div>
  </div>
</a>

<script>
  import { animate, stagger, splitText } from "animejs";

  if (
    "IntersectionObserver" in window &&
    "IntersectionObserverEntry" in window &&
    "intersectionRatio" in window.IntersectionObserverEntry.prototype
  ) {
    const section = document.querySelector("#hero");
    const { chars } = splitText(".avatar__heading--title", {
      chars: { wrap: "clip" },
    });

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            animate(chars, {
              opacity: 0,
              duration: 500,
              delay: stagger(-10),
              ease: "outQuart",
            });
          } else {
            animate(chars, {
              opacity: 1,
              delay: stagger(10),
              duration: 1000,
              ease: "outQuart",
            });
          }
        });
      },
      { threshold: 0.9 }
    );

    if (section) {
      observer.observe(section);
    }
  }
</script>

