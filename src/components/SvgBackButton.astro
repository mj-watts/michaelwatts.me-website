<svg
  xmlns="http://www.w3.org/2000/svg"
  width="48px"
  height="48px"
  viewBox="0 0 48 48"
  class="back-icon"
>
  <circle class="back-icon__circle" cx="24" cy="24" r="24"></circle>
  <g class="back-icon__arrow">
    <line x1="0" x2="24" y1="24" y2="24"></line>
    <g class="back-icon__arrowhead">
      <line x1="0" x2="12" y1="24" y2="12"></line>
      <line x1="0" x2="12" y1="24" y2="36"></line>
    </g>
  </g>
</svg>

<style>
  .back-icon {
    transition: transform 500ms cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }

  .back-icon__circle {
    fill: var(--color-secondary);
  }

  .back-icon__arrow {
    stroke: var(--color-onPrimary);
    stroke-width: 5px;
