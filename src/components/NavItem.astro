---
const { href, isActive } = Astro.props;
---

<a href={href} class:list={[isActive ? "active" : ""]}>
  <slot />
</a>

<style>
  a {
    color: var(--color-onPrimary);
    font-weight: 800;
  }

  a:hover,
  a:focus,
  a:active {
    color: oklab(from var(--color-onPrimary) calc(l + 0.3) a b);
  }
</style>
